<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/night_500</item>
    </style>

    <style name="background_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/night_window_background</item>
    </style>

    <style name="background_style_auth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/night_window_background</item>
    </style>

    <style name="item_list_color">
        <item name="android:background">@color/night_700</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="small_text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_navigation_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/night_500</item>
    </style>

    <style name="bottom_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/night_700</item>
    </style>

    <style name="rest_color_style">
        <item name="android:background">@color/night_500</item>
    </style>
</resources>